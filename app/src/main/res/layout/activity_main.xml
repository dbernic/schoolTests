<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/prepare_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/prepare"
        android:textSize="24dp" />

    <Button
        android:id="@+id/lesson_btn"
        android:layout_marginTop="16dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/lesson"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/md_flag"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:background="@drawable/flag_bg"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:padding="1dp"
            android:src="@drawable/moldova_flag"

            />

        <View
            android:layout_width="24dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/ru_flag"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:padding="1dp"
            android:background="@drawable/flag_bg"
            android:src="@drawable/russia_flag"

            />
        <View
            android:layout_width="24dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/en_flag"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:padding="1dp"
            android:background="@drawable/flag_bg"
            android:src="@drawable/uk_flag"

            />

    </LinearLayout>


</LinearLayout>